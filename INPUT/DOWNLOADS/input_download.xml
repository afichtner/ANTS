<?xml version='1.0' encoding='UTF-8'?>

<data_download>

    <!--verbose-->
    <verbose>1</verbose>
    
    
    <!--data centre and user identity-->
    <centre>iris</centre>
    <user>laura.ermert@derdw.ethz.ch</user>

    <!--networks, channels, stations, locations, etc.-->
    <data>
        <!--list of networks (separated by blanks) from which data are requested-->
        <networks>G</networks>
        <!--list of channels, separated by blanks-->
        <channels>BH*</channels>
        <location>*</location>
        <!--Download stations specified in this file. Set to * to download all stations.-->
        <stations>INPUT/STATION_LISTS/staG.txt</stations>
    </data>

    <!--time window where data are requested-->
    <time>
        <starttime>2013-01-09T00:00:00</starttime>
        <endtime>2013-01-10T00:00:00</endtime>
    </time>

    <!--geographic area where stations are considered-->
    <region>
        <lat_min>-90.0</lat_min>
        <lat_max>90.0</lat_max>
        <lon_min>-180.0</lon_min>
        <lon_max>180.0</lon_max>
    </region>

    <processing>
        <!--downsampling-->
        <rundown>1</rundown>
        <downs>10</downs>
        <!--Give the desired new sampling rate in Hz-->
    </processing>
    
    <!--saving data-->
    <storage>
        <format>mseed</format>
        <downloadloc>./DATA/testdata_update</downloadloc>
        <respfileloc>./DATA/testresp</respfileloc>
    </storage>
    
</data_download>
