<?xml version='1.0' encoding='UTF-8'?>

<stacking_parameters>

    <!--print screen output-->
    <verbose>1</verbose>
    <plotting>1</plotting>

    <!--*************************************************************************************************-->
    <!--input and output directories-->
    <!--*************************************************************************************************-->

    <directories>
        <!--Input directory containing all the day folders-->
        <indir>./DATA/testdata_update</indir>
        <!--output directory for stacked crosscorrelation functions-->
        <outdir>./test1</outdir>
    </directories>

     
    <!--*************************************************************************************************-->
    <!--Time-->
    <!--*************************************************************************************************-->
    <timethings>
        <!--Start date. Loop will start with this directory-->
        <startdate>20130105</startdate>
        <!--End date. Loop will end AFTER processing this directory-->
        <enddate>20130109</enddate>
        <!--Minimum length in seconds: How long does a single time series have to be in order to be considered? (Apply some default?)-->
        <minrecordlen>86000</minrecordlen> 
    </timethings>
    
   
    <!--*************************************************************************************************-->
    <!--Correlations-->
    <!--*************************************************************************************************-->

    <!--Types of correlations-->
    <!--The order corresponds to the actual order of execution-->
    <correlations>
        <!--Maximum lag in seconds-->
        <max_lag>10</max_lag>
        <!--1 - td classical xcorrelation, 2 - fd classical xcorrelation, 3 - phase correlation, any other value should raise an error-->
        <corr_type>1</corr_type>
        <!--Only for phase cross-correlation: Specify exponent (cf Schimmel et al. 2011)-->
        <pcc_nu>1</pcc_nu>
    </correlations>   


</stacking_parameters>
