<?xml version='1.0' encoding='UTF-8'?>

<stacking_parameters>

    <!--print screen output-->
    <verbose>1</verbose>
    <plotting>1</plotting>

    <!--*************************************************************************************************-->
    <!--input and output directories-->
    <!--*************************************************************************************************-->

    <directories>
        <!--Input directory containing all the day folders-->
        <indir>./DATA/testcosines</indir>
        <!--output directory for stacked crosscorrelation functions-->
        <outdir>./DATA/testcosines</outdir>
    </directories>

     
    <!--*************************************************************************************************-->
    <!--Time-->
    <!--*************************************************************************************************-->
    <timethings>
        <!--Start date. Loop will start with this directory-->
        <startdate>19700101</startdate>
        <!--End date. Loop will end AFTER processing this directory-->
        <enddate>19700102</enddate>
        <!--Window length in seconds-->
        <winlen>10</winlen>
        <!--Overlap in SECONDS-->
        <!--Groos et al. recommend an overlap that is equal to the maximum lag-->
        <olap>2</olap>
        
        
        
    </timethings>
    
   
    <!--*************************************************************************************************-->
    <!--Correlations-->
    <!--*************************************************************************************************-->

    <!--Types of correlations-->
    <!--The order corresponds to the actual order of execution-->
    <correlations>
        <!--Maximum lag in seconds-->
        <max_lag>2</max_lag>
        <!--1 - td classical xcorrelation, 2 - fd classical xcorrelation, 3 - phase correlation, any other value should raise an error-->
        <corr_type>1</corr_type>
        <!--For phase cross-correlation: Specify exponent (cf Schimmel et al. 2011)-->
        <pcc_nu>1</pcc_nu>
    </correlations>  
    
    <stacks>
        <!--What type of stack to save-->
        <save_linstack>1</save_linstack>
        <save_pwstack>1</save_pwstack>
        <!--Specify nu parameter for pwstack (Schimmel&Paulsen 1997)-->
        <pws_nu>1</pws_nu>
    </stacks>
        
        
        


</stacking_parameters>
